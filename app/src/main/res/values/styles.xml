<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="EntryChipStyle">@style/EntryChip</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="hintTextColor">@color/primaryColor</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="EntryChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="closeIcon">@null</item>
        <item name="checkedIcon">@null</item>
    </style>
</resources>
